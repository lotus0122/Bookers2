<h1>User info</h1>

<% if flash[:notice] %>
  <p class="flash_color"><%= flash[:notice] %></p>
<% end %>

<%= form_for(@user) do |f| %>

  <p>Name<%= f.text_field :name %></p>

  <h4>Image</h4>
  <p><%= f.attachment_field :profile_image %></p>

  <h4>Introduction</h4>
  <p><%= f.text_area :introduction %></p>
  
   <ul><%= f.submit 'Update User' %></ul>

  <% end %>
