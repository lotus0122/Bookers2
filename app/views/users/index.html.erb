

<head>
<title>Users</title>
</head>


<main>

<div class="container">
<div class="row">
<div class="col-md-3">

<%# 部分テンプレート呼び出し %>
<%= render 'post_images/list',user: @user, book: @book %>

</div>
<div class="col-md-9">
<h2>users</h2>
<table class="table table-striped">

<thead>
<tr>
<th class="table_image">image</th>
<th class="table_name">name</th>
<th class="table_show"></th>
</tr>
</thead>

<tbody>
<% @users.each do |user| %>

<tr>
<td><%=  attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "default_user.jpg", size:'50x50' %></td>
<td><%= user.name %></td>
<td><%=link_to "show" , user_path(user) %></td>
</tr>

<% end %>
</tbody>
</table>
</div>

</div>
</div>

</main>