<% if flash[:notice] %>
  <p class="flash_color"><%= flash[:notice] %></p>
<% end %>

<head>
<title>books</title>
</head>

<main>

<div class="container">
<div class="row">
<div class="col-md-3">

<%# 部分テンプレート呼び出し %>
<%= render 'post_images/list',user: @user, book: @book %>

</div>

<div class="col-md-9">
<h2>Books</h2>
<table class="table table-striped">
<thead>
<tr>
<%# image %>
<th class="table_image"></th>
<th class="table_title">Title</th>
<th class="table_body">Opinion</th>
</tr>
</thead>
<tbody>
<% @user.books.each do |book| %>

<tr>
<td><%=  attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "default_user.jpg" , size:'50x50'  %></td>
<td><%= link_to(book.title,"/books/#{book.id}") %></td>
<td><%= book.body %></td>
</tr>

<% end %>
</tbody>
</table>
</div>

</div>
</div>

</main>
