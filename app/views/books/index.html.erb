<% if flash[:notice] %>
  <p class="flash_color"><%= flash[:notice] %></p>
<% end %>

<head>
<title>books</title>
</head>


<main>


<section class="sct-color-1 slice">
  <div class="container-fluid masonry-container">
    <div class="row">
</section>

<div class="container">
<div class="row">
<div class="col-lg-3">
<%# ユーザー情報予定地 %>
  <h3>New book</h3>

<%= form_for(@book) do |f| %>

  <h4>Title</h4>
  <p class="text_form"><%= f.text_field :title %></p>

  <h4>Body</h4>
  <p class="text_form"><%= f.text_area :body %></p>

<ul class="create_form"><%= f.submit 'Create Book' %></ul>

<% end %>
</div>

<div class="col-lg-8">
<h2>Books</h2>
<table class="table table-striped">
<thead>
<tr>
<th class="table_title">Title</th>
<th class="table_body">Opinion</th>
</tr>
</thead>
<tbody>
<% @books.each do |book| %>
<tr>
<td><%= book.title %></td>
<td><%= book.body %></td>

<td><%=link_to "show" , book_path(book) %></td>
<td><%=link_to  "edit" , edit_book_path(book) %></td>
<td><%=link_to "destroy" , book_path(book) , method: :'delete' %></td>
</tr>
<% end %>
</tbody>
</table>
</div>

</div>
</div>


</main>

<footer>



</footer>
