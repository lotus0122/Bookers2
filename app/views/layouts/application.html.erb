<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookers2</title>
    <link href='https://fonts.googleapis.com/css?family=Raleway:400,600,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700' rel='stylesheet' type='text/css'>
  </head> 

<body>
<header class="header_color">
    <div class="header" id="header">
      <nav class="navbar navbar-main navbar-shadow" role="navigation" id="slide-nav">
        <div class="container relative">
          <div class="navbar-header">
            <a class="navbar-logo" href="/">
              <%= image_tag('') %>
            </a>
   
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>

<div id="slidemenu">
<h3>Bookers</h3>
  <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
    <% if user_signed_in? %>
      <li class="">
      <span class="glyphicon glyphicon-home" aria-hidden="true">
        <%= link_to "Home", user_path(current_user.id) %>
        </span>
      </li>
      <li class="">
      <span class="glyphicon glyphicon-user" aria-hidden="true">
        <%= link_to 'Users', users_path %>
        </span>
      </li>
      <li class="">
      <span class="glyphicon glyphicon-book" aria-hidden="true">
        <%= link_to 'Books', books_path %>
        </span>
      </li>
      <li class="">
      <span class="glyphicon glyphicon-share" aria-hidden="true">
        <%= link_to 'logout', destroy_user_session_path, method: :delete %>
        </span>
      </li>
    <% else %>
       <li class="">
       <span class="glyphicon glyphicon-home" aria-hidden="true">
        <%= link_to "Home", root_path(@book) %>
      </span>
      </li>
      <li class="">
      <span class="glyphicon glyphicon-link" aria-hidden="true">
        <%= link_to "About", home_about_path %>
        </span>
      </li>
      <li class="">
      <span class="glyphicon glyphicon-edit" aria-hidden="true">
        <%= link_to "sign up", new_user_registration_path(@book) %>
        </span>
      </li>
      <li class="">
      <span class="glyphicon glyphicon-log-in" aria-hidden="true">
        <%= link_to "login", new_user_session_path(@book) %>
        </span>
      </li>
    <% end %>
  </ul>
</div>
</header>


</div>
</nav>
</div>
  
    <%= yield %>

   <footer class="footer style-2">
      <div class="container">
        <div class="row">
          <div class="col-md-3">
            <div class="col">
              <br>
              <p class="no-margin" style="font-size: 11px;"></p>
              <%= image_tag('') %>
            </div>
          </div>


          <div class="col-md-2">
            <div class="col">
              <ul>
              <p>CopyRightInfratop.inc</p>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </footer>
    </body>


</html>
